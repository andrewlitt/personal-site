---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Blog';
const description = 'Covering canoe expeditions, hardware builds, and product experiments.';
const permalink = `${Astro.site?.href ?? '/'}blog`;
const siteOrigin = Astro.site?.origin ?? 'https://alitt.ca';
const keywords = 'canoe trip reports, hardware projects, technology development, product management, Andrew Litt blog';
const blogSchema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: title,
  description,
  url: permalink,
  publisher: {
    '@type': 'Person',
    name: 'Andrew Litt',
    url: siteOrigin,
  },
};

let allPosts = await Astro.glob('../../data/blog-posts/*.md');
const parseDate = (post: any) =>
  new Date(post.frontmatter.publishDateISO ?? post.frontmatter.publishDate).valueOf();
allPosts = allPosts.sort((a, b) => parseDate(b) - parseDate(a));
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="blog"
  keywords={keywords}
  schema={blogSchema}
>
  <div class="container">
    <a href="/" class="home-button">Home</a>
    <h1>Blog</h1>
    {allPosts.map((post) => {
      const href = `/blog/${post.file.split('/').pop()!.split('.').shift()!}`;
      return (
        <div>
          <div class="post-item">
            <a href={href}>
              <h2>
                {post.frontmatter.title}
              </h2>
              <p>{post.frontmatter.description}</p>
              <div class="post-item-footer">
                <span class="post-item-date">{post.frontmatter.publishDate}</span>
              </div>
            </a>
          </div>
        </div>
      )
    })}
  </div>
</BaseLayout>

<style>
  h2,
  .post-item-footer {
    font-family: var(--font-family-sans);
    font-weight: 700;
  }
  a {
    text-decoration: none;
  }
  .post-item-date {
    color: var(--text-secondary);
    text-align: left;
    text-transform: uppercase;
    margin-right: 16px;
  }

  hr {
    margin: 0px auto;
  }

  .home-button {
    width: 100px;
    margin: 0 auto;
    display: block;
    text-align: center;}

    
  .home-button {
    width: 100px;
    margin: 0 auto;
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Add prefers-reduced-motion support */
  @media (prefers-reduced-motion: reduce) {
    .home-button {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
