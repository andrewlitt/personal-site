---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';

const title = 'andrew litt';
const description = "A very simple, text-first home page—lean and fast, inspired by jackfriks.com.";
const permalink = Astro.site?.href ?? '/';

let allPosts = await Astro.glob('../data/blog-posts/*.md');
allPosts = allPosts
  .sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf())
  .slice(0, 4); // take only the 4 most recent

---

<BaseLayout title={title} description={'A very simple, text-first home page — lean and fast, inspired by jackfriks.com.'} permalink={permalink}>
  <main class="wrap">
    <header class="hero">
        <div class="holder">
            <Logo />
            <div>
                <h1>andrew litt</h1>
                <p class="tagline">building satellites, looking for a river to paddle.</p>
            </div>
        </div>
    </header>
    <section class="links">
      <a target="_blank" rel="noopener noreferrer" href="mailto:andrew.litt at queensu.ca">email</a> •
      <a target="_blank" rel="noopener noreferrer" href="https://ca.linkedin.com/in/littandrew"> linkedin</a> •
      <a target="_blank" rel="noopener noreferrer" href="https://github.com/andrewlitt"> github</a>
    </section>
    <section class="section">
      <h4>writing</h4>
      <ul class="post-list">
        {allPosts.map((post) => {
          const href = `/blog/${post.file.split('/').pop()!.split('.').shift()!}`;
          return (
            <li class="post-item">
              <a class="post-link" href={href}>
                <div class="post-header">
                  <span class="post-title">{post.frontmatter.title}</span>
                  <span class="post-date">{post.frontmatter.publishDate}</span>
                </div>
                <span class="post-desc">{post.frontmatter.description}</span>
              </a>
            </li>
          );
        })}
      </ul>
      <p class="footer">
        <a href="/blog">View all blog posts</a>
      </p>
    </section>
  </main>
</BaseLayout>

<style>
  .wrap {
    margin: 0 auto;
    max-width: 720px;
    padding: 1rem 1.25rem 4rem;
  }

  .holder {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .hero h1 {
    font-size: clamp(2rem, 6vw, 3.25rem);
    font-weight: 800;
    text-transform: lowercase;
    letter-spacing: -0.02em;
    margin: 0 0 0.5rem 0;
  }

  .tagline {
    margin: 0.25rem 0 0.75rem;
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .social {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
    margin: 0.75rem 0 2rem;
  }

  .social a { text-decoration: underline; }

  .section { margin: 2rem 0 2.25rem; }
  .section h2 {
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: lowercase;
    margin: 0 0 0.75rem 0;
  }
  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    text-align: center;
    font-size: 0; /* hide stray text nodes (legacy separators) */
    margin-bottom: 1.5rem;
  }

  .links a { text-decoration: underline; font-size: 1rem; }

  .links a + a::before {
    content: '·';
    color: var(--text-secondary);
    margin-right: 0.5rem;
  }
  .list { list-style: none; padding: 0; margin: 0; display: grid; gap: 0.25rem; }

  .list a {
    display: inline-block;
    padding: 0.25rem 0;
    text-decoration: none;
    border-bottom: 1px dashed currentColor;
  }
  .list a:hover { border-bottom-style: solid; }

  /* override previous pseudo-element separator to avoid garbled glyphs */
  .links a + a::before { content: '' !important; }
  /* add a border-based separator that wraps nicely */
  .links a + a { border-left: 1px solid var(--text-secondary); padding-left: 0.75rem; }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    border-bottom: 1px dotted currentColor;
  }

  .post-link {
    display: block;
    padding: 1rem 0 1.25rem;
    text-decoration: none;
    color: inherit;            /* keep same color in all states */
  }

  .post-header {
    display: flex;
    justify-content: space-between; /* pushes title left, date right */
    align-items: baseline;
    gap: 1rem;
  }

  .post-title {
    font-size: 1.05rem;
    font-weight: 500;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .post-date {
    font-size: 0.95rem;
    opacity: 0.75;
    white-space: nowrap;
  }

  /* description reveal */
  .post-desc {
    display: block;
    font-size: 1rem;
    line-height: 1.5;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transform: translateY(-3px);
    transition:
      max-height 500ms ease,
      opacity 500ms ease,
      transform 500ms ease;
    margin-top: 0.25rem;
  }

.post-link:hover .post-title,
.post-link:focus-visible .post-title {
  text-decoration: underline; /* underline only */
}

  .post-link:hover .post-desc,
  .post-link:focus-visible .post-desc {
    opacity: 1;
    max-height: 6rem;   /* enough for a few lines */
    transform: translateY(0);
  }

  /* accessibility */
  @media (prefers-reduced-motion: reduce) {
    .post-desc {
      transition: none;
    }
  }

  /* Mobile layout tweaks */
  @media (max-width: 640px) {
    .holder {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .post-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .post-title {
      white-space: normal; /* allow wrapping on small screens */
    }

    .post-date {
      font-size: 0.9rem;
    }
  }


  .footer { margin-top: 1.5rem; font-size: 0.95rem; }

  html { scroll-behavior: smooth; }
  body { font-feature-settings: "ss01" on, "liga" on; }
</style>
