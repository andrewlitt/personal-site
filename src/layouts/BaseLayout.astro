---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
export interface Props {
  title: string;
  description: string;
  permalink: string;
  current?: string;
  ogType?: string;
  ogImage?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  keywords?: string;
  schema?: Record<string, unknown> | Record<string, unknown>[];
}
const {
  title,
  description,
  permalink,
  current,
  ogType,
  ogImage,
  publishedTime,
  modifiedTime,
  author,
  tags,
  keywords,
  schema,
} = Astro.props;
---
<html lang="en">
<head>
  <BaseHead
    title={title}
    description={description}
    permalink={permalink}
    type={ogType}
    image={ogImage}
    publishedTime={publishedTime}
    modifiedTime={modifiedTime}
    author={author}
    tags={tags}
    keywords={keywords}
    schema={schema}
  />
  <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@700&family=Merriweather:wght@400;700&family=Lora:wght@400..700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="layout">
    <Header current={current} />
    <main>
      <slot />
    </main>
    <!-- <Footer /> -->
  </div>
</body>
</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    min-height: 100vh;
  }

  main {
    flex: 1;
    position: relative;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
